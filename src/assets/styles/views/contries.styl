.data__countries-img
  object-fit contain
  width vw(28)

.data__add
  margin-left auto
  display flex
  align-items center

  &-btn
    width vw(30)
    background-color #00d1b2
    color #fff !important

.loading
  pos fixed
  t 0
  l 0
  size 100%
  bgc alpha(white, .4)
  z-index 1000
  df(center, center)
  .loader
    size 50px

.country__form

  &-input

    &:nth-child(2)
      ml vw(30)
 
  &-file 
    opacity 0
    visibility hidden
    position absolute

  &-wrapper
    display flex
    align-items center

  &-preview
    mr vw(10)
    width vw(28)

  &-button
    width vw(200)
    height vw(40)
    background #1bbc9b
    color #fff
    font-size 1rem
    font-weight 700
    display flex
    justify-content flex-start
    align-items center
    border-radius 3px
    cursor pointer
    margin 0 auto  

  &-img
    object-fit cover
    width vw(28)
 
