.input
  width vw(200)
  padding .5em .75em
  border-radius 3px
  border 1px solid #eee
  transition .3s border-color
  height vw(40)
  background-color transparent
  &:hover 
    border: 1px solid #aaa

.form__views
  display flex
  padding vw(20)
  justify-content space-between
  align-items center

.btn--add
  width vw(200)
  text-align center
  height vw(40)
  background #1bbc9b
  color #fff
  font-size 1rem
  font-weight 700
  border-radius 3px
  cursor pointer
  transition: 0.4s background-color, opacity 0.4s

  &:disabled
    opacity 0.8
    pointer-events none

  &:hover
    background-color #000

.label-title
  text-align center
  font-weight 700
  color #363636
  display grid

.form__views
  display flex
  padding vw(20) vw(20) 0 vw(20)
  justify-content space-between

.fans
  .fans__header
    display flex
    justify-content space-between
    align-items center

  &__download-btn
    padding 0 0.75rem

  &__top
    border-bottom vw(1) solid $black
    padding-bottom vw(30)

  &__bottom
    display flex
    justify-content space-between
    align-items center
    padding-top vw(30)

