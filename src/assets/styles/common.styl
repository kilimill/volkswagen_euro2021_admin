html
  ff $os
  bgc #f8f8f8
  @media $mobile
    fs vm(16)
body
  overflow -moz-scrollbars-none
  -ms-overflow-style none
  &::-webkit-scrollbar
    w 0

.fullheight
  min-height 100vh
  @media $mobile
    padding 0 1rem

.centered
  df(center, center)

.button
  white-space nowrap
  c #4a4a4a
  border 1px solid #dbdbdb
  padding calc(.375em - 1px) .75em
  text-align center
  border-radius 4px
  transition .4s color, .4s background-color, .4s border-color
  &:not([disabled]):hover
    bgc #0a0a0a
    border-color #0a0a0a
    color white
  &_black
    bgc #0a0a0a
    border-color #0a0a0a
    color white
  &_green
    bgc #00d1b2
    border-color transparent
    c white
    &:hover
      bgc #00c4a7
      border-color transparent
      c white
  &_blue
    bgc #0428d8
    border-color transparent
    c white
    &:hover
      border-color transparent
      c white
  &_red
    bgc #ff3860
    border-color transparent
    c white
    &:hover
      bgc #ff2b56
      border-color transparent
      c white
  &_yellow
    bgc #ffdd57
    border-color transparent
    c white
    &:hover
      bgc #f3cb2d
      border-color transparent
      c white
  &_href
    display inline-flex
    cursor pointer
  &[disabled]
    box-shadow none
    opacity .5
  &__post
    mr vw(30)
  &.ml
    ml vw(30)

.status
  font-weight bold
  &_confirmed
    c #00d1b2
  &_new
    c #ffdd57
  &_rejected
    c #0428d8

.main
  &.has-aside-left
    pl 15rem
    @media $mobile
      pl 11rem

.data
  padding 1.5rem
  &__content
    &-empty
      font-weight 700
      padding 2rem

.checkbox
  display inline-flex
  align-items center
  pos relative
  &__true
    pos absolute
    l 0
    opacity 0
    z-index -1
    cursor pointer
    size 100%
  &__fake
    cursor pointer
    size 1.25em
    flex-shrink 0
    border-radius 4px
    border 1px solid #2e323a
    transition background .15s ease-out
    background transparent
  &__true:checked + &__fake
    background #3273dc url("data:image/svg+xml;charset=utf-8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1 1'%3E%3Cpath d='M.04.627L.146.52.43.804.323.91zm.177.177L.854.167.96.273.323.91z' fill='%23fff'/%3E%3C/svg%3E") no-repeat 50%
    background-size 75%
    border-color #3273dc
  &.checked > &__fake
    background #3273dc url("data:image/svg+xml;charset=utf-8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1 1'%3E%3Cpath d='M.04.627L.146.52.43.804.323.91zm.177.177L.854.167.96.273.323.91z' fill='%23fff'/%3E%3C/svg%3E") no-repeat 50%
    background-size 75%
    border-color #3273dc

.green
  c #00d1b2
.red
  c #ff3860

.input
  w 100%
  c #363636
  border-radius 4px
  bgc white
  border 1px solid #dbdbdb

.select
  c #4a4a4a
  border 1px solid #dbdbdb
  border-radius 4px
  padding calc(0.375em - 1px) calc(0.625em - 1px)
  option[disabled]
    dn()

.link
  c #167df0
  transition .4s color
  &:hover
    c #0a0a0a

