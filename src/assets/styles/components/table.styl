.table
  min-width 100%
  c #363636
  @media $small1200
    min-width 890px
  &__wrapper
    bgc white
    border 1px solid rgba(24,28,33,.06)
    border-radius 6px
  &__scroll
    pl .15rem
    @media $small1200
      overflow-x auto
  &__footer
    padding .75rem
    &-control
      &_buttons
        df(center,)
      &-buttons
        df(stretch,)
        flex-direction column
        .button:last-child
          mt 10px        
  th
    font-weight 700
    text-align left
    border-bottom-width 1px
    border-width 0 0 2px
    c #363636
    padding .5em .75em
    &.image
      width 80px
    &.controls
      width 120px
    &.controls_short
      width 65px
    &.place
      width 120px
    &.approve
      width 160px
    &.rang
      width 200px
    &.status
      width 200px
    &.person
      width 260px
    &.checks
      width 60px
    &.year
      width 70px
    &.created
      width 250px
    &.status
      width 200px
  td
    border 1px solid #fafafa
    border-width 0 0 1px
    padding .5em .75em
  td:first-child > a 
    color black
    text-decoration underline
  tr:nth-child(2n)
    bgc #fafafa
  &__image
    db()
    size 24px
    object-fit contain
    &-wrapper
      size 1.5rem
      margin 0 auto
  &__profile
    fs .75rem
    border-radius 2px
    margin 0 .25rem
  &__buttons
    df(flex-start, flex-end)
    flex-wrap wrap
    .button
      padding calc(0.375em - 1px) .45em
      margin auto .25rem
      &:not(:last-child)
        border-bottom-right-radius 0
        border-top-right-radius 0
        margin-right -1px
      &:not(:first-child)
        border-bottom-left-radius 0
        border-top-left-radius 0
      &:last-child
        mr 0

.tbody__window
  display flex
  align-items center

  img 
    margin 0 vw(10)
